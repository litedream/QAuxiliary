<!-- res/drawable/edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色，可以用透明色或者浅灰色 -->
    <solid android:color="#FFFFFF" />

    <!-- 设置边框颜色和宽度 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- 设置圆角半径 -->
    <corners android:radius="8dp" />

    <!-- 添加内边距以增强点击效果 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- 添加阴影效果 -->
    <size
        android:width="0dp"
        android:height="0dp" />

</shape>
